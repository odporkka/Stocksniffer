<p id="notice"><%= notice %></p>

<div class="row">
  <h2><%= @nasdaq_instrument.name %></h2>
</div>

<div class="row">
  <div class="col col-sm-4">
    <strong>Exchange:</strong>
    NASDAQ
    </br>
    <strong>Symbol:</strong>
    <%= @nasdaq_instrument.symbol %>
    </br>
    <strong>3 month movement:</strong>
    <% if @threemonthpr >= 0 %>
        <span style="color:green"><%= @threemonthpr %> %</span>
    <% else %>
        <span style="color:red"><%= @threemonthpr %> %</span>
    <% end %>
  </div>
  <div class="col col-sm-4">
    <strong>Last trading day open:</strong>
    <%= @fo.open %>
    </br>
    <strong>Market cap:</strong>
    <%= @fo.mktcap %>
    </br>
    <strong>52 week movement:</strong>
    <%= @fo.one_year %>
  </div>
  <div class="col col-sm-4">
    <strong>P/E:</strong>
    <%= @fo.pe %>
    </br>
    <strong>Shares:</strong>
    <%= @fo.shares %>
    </br>
    <strong>Earnings per share:</strong>
    <%= @fo.eps %>
  </div>
</div>


<%= line_chart @weeks, title: "Historical value development", library: {backgroundColor: "#eee"} %>
<%= line_chart @threemonths, title: "3 month value development", library: {backgroundColor: "#eee"} %>

<%= link_to "Edit", edit_nasdaq_instrument_path(@nasdaq_instrument) %> |
<%= link_to "Back", nasdaq_instruments_path %>
