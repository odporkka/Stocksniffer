<p id="notice"><%= notice %></p>

<h1>Symbols (<%= @stocks.count %>)</h1>

<div>
  <%= form_tag stocks_path, :method => 'get' do %>
      <p>
        Name: <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", class:'btn-xs btn-primary'%>
      </p>
  <% end %>
</div>

<%= will_paginate @stocks %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= link_to stock.name, stock %></td>
        <td><%= stock.symbol %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @stocks %>

<br>

<%= link_to 'New Stock', new_stock_path %>
<p>
  <%= button_to 'Load from CSV', action: 'readCsv' %>
</p>

