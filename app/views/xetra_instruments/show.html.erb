<p id="notice"><%= notice %></p>

<div class="row">
  <h2><%= @xetra_instrument.name %></h2>
</div>

<div class="row">
  <div class="col col-sm-4">
    <strong>Exchange:</strong>
    XETRA
    </br>
    <strong>Symbol:</strong>
    <%= @xetra_instrument.symbol %>
    </br>
    <strong>ISIN:</strong>
    <%= @xetra_instrument.isin %>
    </br>
  </div>
  <div class="col col-sm-4">
    <strong>Close:</strong>
    <%= @fo.close %>
    </br>
    <strong>Open:</strong>
    <%= @fo.open %>
    </br>
    <strong>Market cap:</strong>
    <%= number_with_delimiter(@fo.mkt_cap, delimiter: " ") %> m
    </br>
    <strong>52 week range:</strong>
    <%= @fo.low52 %> - <%= @fo.high52 %>
    </br>
    <strong>Beta:</strong>
    <%= @fo.beta %>
    </br>
  </div>
  <div class="col col-sm-4">
    <strong>Trailing-P/E:</strong>
    <%= @fo.t_pe %>
    </br>
    <strong>Forward-P/E:</strong>
    <%= @fo.f_pe %>
    </br>
    <strong>Shares:</strong>
    <%= number_with_delimiter(@fo.shares, delimiter: " ") %> m
    </br>
    <strong>Earnings per share:</strong>
    <%= @fo.eps %> (12mth)
  </div>
</div>

<%= link_to "Edit", edit_xetra_instrument_path(@xetra_instrument) %> |
<%= link_to "Back", xetra_instruments_path %>
